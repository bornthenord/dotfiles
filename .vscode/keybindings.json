[
    //
    // explorer
    //
    {
        "key": "cmd+e",
        "command": "solutionExplorer.focus",
        "when": "!solutionExplorer.visible"
    },
    {
        "key": "cmd+e",
        "command": "runCommands",
        "args": {
            "commands": [
                "solutionExplorer.removeView",
                "workbench.explorer.fileView.focus"
            ]
        },
        "when": "solutionExplorer.visible"
    },
    {
        "key": "Escape",
        "command": "workbench.action.focusLastEditorGroup",
        "when": "solutionExplorer.active && !inputFocus && !findInputFocussed"
    },
    {
        "key": "alt+g",
        "command": "list.focusFirst",
        "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus && !findInputFocussed"
    },
    {
        "key": "shift+alt+g",
        "command": "list.focusLast",
        "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus && !findInputFocussed"
    },
    {
        "key": "alt+t",
        "command": "workbench.action.terminal.newWithCwd",
        "args": {
            "cwd": "${fileDirname}"
        },
        "when": "solutionExplorer.visible && !inputFocus && !findInputFocussed"
    },
    {
        "key": "alt+n",
        "command": "csdevkit.addNewFileFromNewFileMenu",
    },
    // for enabled alt+n
    {
        "key": "alt+n",
        "command": "-workbench.action.files.newUntitledFile"
    },
    {
        "key": "shift+alt+n",
        "command": "explorer.newFolder",
        "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus && !findInputFocussed"
    },
    {
        "key": "alt+f",
        "command": "list.find",
        "when": "listFocus  && !inputFocus && !findInputFocussed"
    },
    {
        "key": "shift+alt+f",
        "command": "filesExplorer.findInWorkspace",
        "when": "listFocus  && !inputFocus && !findInputFocussed"
    },
    {
        "key": "alt+d",
        "command": "csdevkit.deleteItem",
        "when": "listFocus && !findInputFocussed"
    },
    {
        "key": "alt+x",
        "command": "filesExplorer.cut",
        "when": "listFocus && !findInputFocussed"
    },
    {
        "key": "alt+u",
        "command": "filesExplorer.cancelCut",
        "when": "listFocus && !findInputFocussed"
    },
    {
        "key": "alt+r",
        "command": "renameFile",
        "when": "listFocus && !findInputFocussed"
    },
    {
        "key": "alt+y",
        "command": "filesExplorer.copy",
        "when": "listFocus && !findInputFocussed"
    },
    {
        "key": "alt+p",
        "command": "filesExplorer.paste",
        "when": "listFocus && !findInputFocussed"
    },
    //
    // file navigation
    //
    {
        "key": "cmd+,",
        "command": "workbench.action.navigateBack"
    },
    {
        "key": "cmd+.",
        "command": "workbench.action.navigateForward"
    },
    {
        "key": "shift+cmd+f",
        "command": "workbench.action.quickTextSearch"
    },
    {
        "key": "cmd+f",
        "command": "workbench.action.quickOpen"
    },
    //
    // text edit
    //
    {
        "key": "alt+h",
        "command": "editor.action.quickFix"
    },
    {
        "key": "alt+.",
        "command": "editor.gotoNextFold",
        "when": "editorFocus"
    },
    {
        "key": "alt+,",
        "command": "editor.gotoPreviousFold",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+f",
        "command": "editor.action.format",
        "when": "editorFocus"
    },
    {
        "key": "alt+enter",
        "command": "editor.action.showContextMenu",
        "when": "editorFocus"
    },
    //
    // terminal
    //
    {
        "key": "cmd+t",
        "command": "workbench.action.terminal.toggleTerminal",
    },
    {
        "key": "Escape",
        "command": "workbench.action.focusLastEditorGroup",
        "when": "terminalFocus"
    },
    {
        "key": "alt+k",
        "command": "workbench.action.terminal.kill",
        "when": "terminalFocus"
    },
    {
        "key": "alt+m",
        "command": "workbench.action.toggleMaximizedPanel",
        "when": "terminalFocus"
    },
    //
    // source control
    //
    {
        "key": "cmd+b",
        "command": "git.checkout"
    },
    {
        "key": "cmd+s",
        "command": "runCommands",
        "args": {
            "commands": [
                "workbench.scm.focus",
                "workbench.scm.action.setTreeViewMode",
                "workbench.scm.action.focusNextResourceGroup"
            ]
        }
    },
    //
    // testing
    //
    {
        "key": "cmd+u",
        "command": "workbench.view.testing.focus"
    },
]