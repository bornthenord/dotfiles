[
    //
    // explorer
    //
    {
        "key": "cmd+e",
        "command": "workbench.explorer.fileView.focus",
    },
    {
        "key": "g",
        "command": "list.focusFirst",
        "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
    },
    {
        "key": "alt+g",
        "command": "list.focusLast",
        "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
    },
    {
        "key": "o",
        "command": "explorer.openAndPassFocus",
        "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
    },
    {
        "key": "t",
        "command": "workbench.action.terminal.newWithCwd",
        "args": {
            "cwd": "${fileDirname}"
        },
        "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
    },
    {
        "key": "q",
        "command": "workbench.action.focusLastEditorGroup",
        "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
    },
    {
        "key": "n",
        "command": "explorer.newFile",
        "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
    },
    {
        "key": "alt+n",
        "command": "explorer.newFolder",
        "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
    },
    {
        "key": "a",
        "command": "csharpextensions.createClass",
        "when": "listFocus"
    },
    {
        "key": "alt+a",
        "command": "csharpextensions.createInterface",
        "when": "listFocus"
    },
    {
        "key": "f",
        "command": "list.find",
        "when": "listFocus"
    },
    {
        "key": "alt+f",
        "command": "filesExplorer.findInWorkspace",
        "when": "listFocus"
    },
    {
        "key": "d",
        "command": "deleteFile",
        "when": "listFocus"
    },
    {
        "key": "x",
        "command": "filesExplorer.cut",
        "when": "listFocus"
    },
    {
        "key": "u",
        "command": "filesExplorer.cancelCut",
        "when": "listFocus"
    },
    {
        "key": "r",
        "command": "renameFile",
        "when": "listFocus"
    },
    {
        "key": "y",
        "command": "filesExplorer.copy",
        "when": "listFocus"
    },
    {
        "key": "p",
        "command": "filesExplorer.paste",
        "when": "listFocus"
    },
    //
    // file navigation
    //
    {
        "key": "cmd+,",
        "command": "workbench.action.navigateBack"
    },
    {
        "key": "cmd+.",
        "command": "workbench.action.navigateForward"
    },
    {
        "key": "shift+cmd+f",
        "command": "workbench.action.quickTextSearch"
    },
    {
        "key": "cmd+f",
        "command": "workbench.action.quickOpen"
    },
    //
    // text edit
    //
    {
        "key": "alt+h",
        "command": "editor.action.quickFix"
    },
    {
        "key": "alt+.",
        "command": "editor.gotoNextFold",
        "when": "editorFocus"
    },
    {
        "key": "alt+,",
        "command": "editor.gotoPreviousFold",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+f",
        "command": "editor.action.format",
        "when": "editorFocus"
    },
    {
        "key": "alt+enter",
        "command": "editor.action.showContextMenu",
        "when": "editorFocus"
    },
    //
    // terminal
    //
    {
        "key": "cmd+t",
        "command": "workbench.action.terminal.toggleTerminal",
    },
    {
        "key": "alt+k",
        "command": "workbench.action.terminal.kill",
        "when": "terminalFocus"
    },
    {
        "key": "alt+m",
        "command": "workbench.action.toggleMaximizedPanel",
        "when": "terminalFocus"
    },
    //
    // source control
    //
    {
        "key": "cmd+b",
        "command": "git.checkout"
    },
    {
        "key": "cmd+s",
        "command": "runCommands",
        "args": {
            "commands": [
                "workbench.scm.focus",
                "workbench.scm.action.setTreeViewMode",
                "workbench.scm.action.focusNextResourceGroup"
            ]
        }
    },
    {
        "key": "shift+,",
        "command": "workbench.action.compareEditor.previousChange",
        "when": "workbench.scm.visible"
    },
    {
        "key": "shift+.",
        "command": "workbench.action.compareEditor.nextChange",
        "when": "workbench.scm.visible"
    },
    //
    // testing
    //
    {
        "key": "cmd+u",
        "command": "workbench.view.testing.focus"
    },
]