[  
    {
        "key": "alt+space",
        "command": "workbench.action.showCommands",
    },
    //
    // file navigation
    //
    {
        "key": "cmd+,",
        "command": "workbench.action.nextEditor"
    },
    {
        "key": "cmd+.",
        "command": "workbench.action.previousEditor"
    },
    {
        "key": "cmd+q",
        "command": "workbench.action.quickOpen",
    },
    {
        "key": "cmd+w",
        "command": "workbench.action.closeActiveEditor",
        "when": "editorFocus"
    },
    //
    // windows
    //
    {
        "key": "cmd+o cmd+r",
        "command": "workbench.action.openRecent",
    },
    {
        "key": "cmd+o cmd+s",
        "command": "csdevkit.openSolution",
    },
    {
        "key": "cmd+o cmd+f",
        "command": "vscode.openFolder",
    },
    // explorer
    {
        "key": "cmd+e",
        "command": "solutionExplorer.focus",
    },
    {
        "key": "cmd+w",
        "command": "workbench.action.closeSidebar",
        "when": "(solutionExplorer.visible || scmViewMode) && !editorFocus"
    },
    {
        "key": "Escape",
        "command": "workbench.action.focusLastEditorGroup",
        "when": "solutionExplorer.active && !inputFocus && !findInputFocussed"
    },
    // file explorer
    {
        "key": "cmd+f",
        "command": "workbench.explorer.fileView.focus",
    },
    // bottom panel
    {
        "key": "alt+m",
        "command": "workbench.action.toggleMaximizedPanel",
    },
    {
        "key": "cmd+w",
        "command": "workbench.action.closePanel",
        "when": "panelFocus && !editorFocus"
    },
    // problems
    {
        "key": "cmd+p",
        "command": "workbench.actions.view.problems",
    },
    // terminal
    {
        "key": "cmd+t",
        "command": "workbench.action.terminal.focus",
    },
    // source control
    {
        "key": "cmd+b",
        "command": "git.checkout"
    },
    {
        "key": "cmd+s",
        "command": "runCommands",
        "args": {
            "commands": [
                "workbench.scm.focus",
                "workbench.scm.action.setTreeViewMode",
                "workbench.scm.action.focusNextResourceGroup"
            ]
        }
    },
    // testing
    {
        "key": "cmd+u",
        "command": "workbench.view.testing.focus"
    },
    //
    // new items
    //
    {
        "key": "alt+n",
        "command": "csdevkit.addNewFileFromNewFileMenu",
    },
    // for enabled alt+n
    {
        "key": "alt+n",
        "command": "-workbench.action.files.newUntitledFile"
    },
    {
        "key": "shift+alt+n",
        "command": "explorer.newFolder",
        "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus && !findInputFocussed"
    },
    {
        "key": "alt+d",
        "command": "csdevkit.deleteItem",
        "when": "listFocus && !findInputFocussed"
    },
    {
        "key": "alt+x",
        "command": "filesExplorer.cut",
        "when": "listFocus && !findInputFocussed"
    },
    {
        "key": "alt+u",
        "command": "filesExplorer.cancelCut",
       "when": "listFocus && !findInputFocussed"
    },
    {
        "key": "alt+r",
        "command": "renameFile",
        "when": "listFocus && !findInputFocussed"
    },
    {
        "key": "alt+y",
        "command": "filesExplorer.copy",
        "when": "listFocus && !findInputFocussed"
    },
    {
        "key": "alt+p",
        "command": "filesExplorer.paste",
        "when": "listFocus && !findInputFocussed"
    }, 
]